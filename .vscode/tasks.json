{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Game (Thai)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "javac -encoding UTF-8 -d ..\\bin main/*.java ui/*.java shop/*.java core/*.java story/*.java"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\src"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$javac"
            ]
        },
        {
            "label": "Run Game",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "java -cp ..\\bin main.GameWindow"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\src"
            },
            "group": {
                "kind": "run",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "dependsOn": [
                "Compile Game (Thai)"
            ]
        }
    ]
}
